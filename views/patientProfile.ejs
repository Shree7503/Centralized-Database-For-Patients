    <!-- Main Content -->
    <div class="feature-box">
      <a href="/displayHistory" target="_blank" class="feature-box">
        <h2>My Medical History</h2>
        <p>Check Ur Medical History Here</p>
      </a>
      <a href="/appointment" target="_blank" class="feature-box">
        <h2>Appointments</h2>
        <p>Book Your Appointments Here</p>
      </a>
    </div>
    <div class="otp">
      <button
        class="btn btn-primary"
        id="otp"
        data-bs-toggle="modal"
        data-bs-target="#reg-modal"
      >
        Send OTP
      </button>
    </div>
    <div
      class="modal fade"
      id="reg-modal"
      tabindex="-1"
      aria-labelledby="modal-title"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modal-title">
              Enter Recipient's Email
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            >
            </button>
          </div>
          <div class="modal-body">
            <form method="post" action="/generateOTP">
              <div class="form-group">
                <label for="recipient-name" class="col-form-label"
                  >Email: </label
                >
                <input
                  name="email"
                  type="text"
                  class="form-control"
                  id="recipient-name"
                />
              </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <input type="submit" class="btn btn-primary" value="Send OTP">
          </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
