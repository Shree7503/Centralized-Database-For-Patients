  <body>
    <div class="container animated in">
      <h1>Patient Details</h1>
      <form action="/updateForm/<%= user._id %>" id="patient-form" method="post">
        <input type="hidden" name="_method" value="PUT" />
        <div class="form-group">
          <label for="username">Username:</label>
          <input
            type="text"
            id="username"
            name="username"
            value="<%= user.username %>"
          />
        </div>
        <div class="form-group">
          <label for="hospital-name">Hospital Name:</label>
          <input
            type="text"
            id="hospital-name"
            name="hospitalName"
            value="<%= user.hospitalName %>"
          />
        </div>
        <div class="form-group">
          <label for="location">Location:</label>
          <input
            type="text"
            id="location"
            name="location"
            value="<%= user.location%>"
          />
        </div>
        <div class="form-group">
          <label for="department">Department:</label>
          <input
            type="text"
            id="department"
            name="department"
            value="<%= user.department%>"
          />
        </div>
        <div class="form-group">
          <label for="admission-date">Admission Date:</label>
          <input
            type="date"
            id="admission-date"
            name="admissionDate"
            value="<%= new Date(user.admissionDate).toLocaleDateString()%>"
          />
        </div>
        <div class="form-group">
          <label for="discharge-date">Discharge Date:</label>
          <input
            type="date"
            id="discharge-date"
            name="dischargeDate"
            value="<%= new Date(user.dischargeDate).toLocaleDateString()%>"
          />
        </div>
        <div class="form-group">
          <label for="reason-visit">Reason for Visit:</label>
          <textarea id="reason-visit" name="reasonForVisit">
<%=user.reasonForVisit%></textarea
          >
        </div>
        <div class="form-group">
          <label for="diagnosis">Diagnosis:</label>
          <textarea id="diagnosis" name="diagnosis">
<%=user.diagnosis%></textarea
          >
        </div>
        <div class="form-group">
          <label for="procedures">Procedures:</label>
          <textarea id="procedures" name="procedures">
<%=user.procedures%></textarea
          >
        </div>
        <div class="form-group">
          <label for="testment">Treatment:</label>
          <textarea id="testment" name="treatment">
<%=user.treatment%></textarea
          >
        </div>
        <div class="form-group">
          <label for="prescription">Prescription:</label>
          <textarea id="prescription" name="prescription">
<%=user.prescription%></textarea
          >
        </div>
        <!-- <div class="form-group">
          <label>Upload MRI or Scan or X-Ray:</label>
